{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "layout": {
            "contentSize": "1183px",
            "wideSize": "1183px"
        },
        "color": {
            "palette": [
                {
                    "slug": "heda-black",
                    "color": "#2b2a33",
                    "name": "Black"
                },
                {
                    "slug": "heda-white",
                    "color": "#eee3e3",
                    "name": "White"
                },
                {
                    "slug": "heda-red",
                    "color": "#dc3545",
                    "name": "Red"
                }
            ]
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "'Inter', sans-serif",
                    "slug": "inter",
                    "name": "Body - inter",
                    "fontFace": [
                        {
                            "fontFamily": "'Inter', sans-serif",
                            "fontWeight": "300",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": [
                                "file:./assets/fonts/Inter-Light.ttf"
                            ]
                        },
                        {
                            "fontFamily": "'Inter', sans-serif",
                            "fontWeight": "400",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": [
                                "file:./assets/fonts/Inter-Regular.ttf"
                            ]
                        }
                    ]
                },
                {
                    "fontFamily": "'Lato', sans-serif",
                    "slug": "lato",
                    "name": "Headings - lato",
                    "fontFace": [
                        {
                            "fontFamily": "'Lato', sans-serif",
                            "fontWeight": "700",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": [
                                "file:./assets/fonts/Lato-Bold.ttf"
                            ]
                        }
                    ]
                }
            ],
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "0.64rem",
                    "name": "Small"
                },
                {
                    "slug": "medium",
                    "size": "0.8rem",
                    "name": "Medium"
                },
                {
                    "slug": "regular",
                    "size": "1rem",
                    "name": "Regular"
                }
            ]
        },
        "custom": {
            "typography": {
                "fontSize": {
                    "heading-1": "clamp(2.113rem, 1.9252rem + 0.9390000000000001vw, 3.052rem)"
                }
            }
        },
        "spacing": {
            "padding": true,
            "margin": true,
            "units": [
                "px",
                "em",
                "rem",
                "vh",
                "vw",
                "%"
            ]
        }
    },
    "styles": {
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--inter)",
            "lineHeight": "1.75",
            "fontSize": "1rem"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--lato)",
                    "lineHeight": "1.3",
                    "fontSize": "var(--wp--custom--typography--font-size--heading-1)"
                }
            }
        }
    }
}